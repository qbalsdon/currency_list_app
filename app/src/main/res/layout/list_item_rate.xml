<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/list_item_rate"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/list_item_rate_currency_flag"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/list_item_rate_currency_iso"
        app:layout_constraintBottom_toBottomOf="@id/list_item_rate_currency_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/list_item_rate_currency_iso"

        tools:src="@drawable/ic_abkhazia"
        />

    <TextView
        android:id="@+id/list_item_rate_currency_iso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/currency_iso"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        tools:text="rub"
        />
    <TextView
        android:id="@+id/list_item_rate_currency_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/currency_name"

        app:layout_constraintTop_toBottomOf="@id/list_item_rate_currency_iso"
        app:layout_constraintLeft_toLeftOf="parent"

        tools:text="Russian ruble"
        />

    <EditText
        android:id="@+id/list_item_rate_currency_rate"
        android:layout_width="@dimen/minimum_input_width"
        android:layout_height="wrap_content"
        style="@style/currency_rate"
        android:inputType="numberDecimal"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        tools:text="1183.06"
        />

</androidx.constraintlayout.widget.ConstraintLayout>