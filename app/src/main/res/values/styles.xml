<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_item_rate">
        <item name="android:layout_marginTop">@dimen/list_item_rate_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_rate_margin</item>
    </style>

    <style name="currency">
        <item name="android:layout_marginLeft">@dimen/label_left_margin</item>
        <item name="android:layout_marginRight">@dimen/currency_label_margin</item>
    </style>

    <style name="title" parent="currency">
        <item name="android:layout_marginTop">@dimen/title_margin</item>
        <item name="android:layout_marginBottom">@dimen/title_margin</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="currency_iso" parent="currency">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="currency_name" parent="currency"/>
    <style name="currency_rate" parent="currency">
        <item name="android:textSize">@dimen/currency_rate_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">@dimen/minimum_input_width</item>
    </style>
</resources>
